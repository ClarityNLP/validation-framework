# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                                               controllers.SearchController.index
GET     /searchtext/:query/:start/:rows		            controllers.SearchController.queryText(query:String, start:Int, rows:Int)
GET     /subjectdocuments/:subjectId/:highlightQuery	controllers.SearchController.getSubjectDocuments(subjectId:String, highlightQuery:String)
GET     /subjectrecords/:subjectId		                controllers.SearchController.getSubjectRecords(subjectId:String)
GET     /subjectinfo/:subjectId		                    controllers.SearchController.getSubjectInfo(subjectId:String)
GET     /report/:reportId/:origQuery		            controllers.SearchController.getReport(reportId:String, origQuery:String)

# An example controller showing how to use dependency injection
# GET     /count                      controllers.CountController.count
# An example controller showing how to write asynchronous code
# GET     /message                    controllers.AsyncController.message
# The play demo page
# GET     /play                       controllers.PlayController.index

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               					controllers.Assets.versioned(path="/public", file: Asset)
